<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#DFDFDF">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:hint="search for vendor"
            android:padding="10dp"
            android:layout_margin="8dp"
            android:id="@+id/searchBar"
            android:visibility="gone"
            android:background="@drawable/background_searchbox"
            android:textColor="#202020"/>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/selectedVendorList"
            android:choiceMode="singleChoice">

        </ListView>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingBottom="1dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_weight="0.333"
                    android:layout_height="60dp"
                    android:visibility="gone"
                    android:layout_gravity="left">
                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:id="@+id/refreshRoundTabFrame"
                        android:layout_gravity="left"
                        android:gravity="center"
                        android:background="@drawable/background_transparent_circle"/>
                    <TextView
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:id="@+id/refreshRoundTab"
                        android:layout_marginTop="8dp"
                        android:clickable="true"
                        android:layout_marginLeft="8dp"
                        android:layout_gravity="left"
                        android:background="@drawable/background_darkgrey_circle"/>
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/refresh"
                        android:layout_gravity="left"
                        android:layout_marginLeft="18dp"
                        android:scaleType="centerCrop"
                        android:layout_marginTop="18dp"/>
                </FrameLayout>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_weight="0.333"
                    android:layout_height="60dp"
                    android:visibility="gone"
                    android:layout_gravity="center">
                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:id="@+id/searchRoundTabFrame"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:background="@drawable/background_transparent_circle"/>
                    <TextView
                        android:layout_width="54dp"
                        android:layout_height="54dp"
                        android:id="@+id/searchRoundTab"
                        android:layout_marginTop="0dp"
                        android:clickable="true"
                        android:layout_marginLeft="0dp"
                        android:layout_gravity="center"
                        android:background="@drawable/background_grey_circle"/>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/search"
                        android:layout_gravity="center"

                        android:layout_marginLeft="0dp"
                        android:scaleType="centerCrop"
                        android:layout_marginTop="0dp"
                        android:id="@+id/imageView" />
                </FrameLayout>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_weight="0.333"
                    android:layout_height="50dp"
                    android:layout_gravity="right">
                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/addVendorRoundTabFrame"
                        android:layout_gravity="right"
                        android:background="@drawable/background_transparent_circle"/>
                    <TextView
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:layout_gravity="right"
                        android:id="@+id/addVendorRoundTab"
                        android:clickable="true"
                        android:layout_marginRight="3dp"
                        android:scaleType="centerCrop"
                        android:layout_marginTop="3dp"
                        android:background="@drawable/background_grey_circle"/>
                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/addnew"
                        android:layout_gravity="right"
                        android:layout_marginRight="7dp"
                        android:scaleType="centerCrop"
                        android:layout_marginTop="7dp"/>
                </FrameLayout>
            </LinearLayout>
        </RelativeLayout>

    </FrameLayout>
</LinearLayout>
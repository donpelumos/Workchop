<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select The Location You Are Based In"
        android:textColor="#252525"
        android:textSize="16sp"
        android:padding="10dp"
        android:background="#CCCCCC"
        android:gravity="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#DDDDDD"
        android:orientation="horizontal"
        android:padding="5dp">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/left_arrow"
            android:id="@+id/leftArrow"
            android:clickable="true"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#444444"
            android:id="@+id/stateId"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginRight="40dp"
            android:text="Lagos State"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="-40dp"
            android:id="@+id/rightArrow"
            android:src="@drawable/right_arrow"
            android:clickable="true"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:background="#F1F1F1"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:background="#F1F1F1"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="186dp"
                    android:layout_height="match_parent"
                    android:textSize="13sp"
                    android:alpha="0.7"
                    android:gravity="center"
                    android:text="Ojuelegba | Surulere | Iponri | Festac | Aguda | Bode Thomas | Apapa | Mile 2 | Badagry"
                    android:padding="2dp"
                    android:clickable="true"
                    android:textColor="#EEEEEE"
                    android:id="@+id/newQuadrant1"
                    android:layout_margin="2dp"
                    android:background="#656565"/>
                <TextView
                    android:layout_width="106dp"
                    android:layout_height="match_parent"
                    android:textSize="13sp"
                    android:gravity="center"
                    android:clickable="true"
                    android:alpha="0.7"
                    android:padding="2dp"
                    android:text="Ikeja | Ogba | Opebi | Oregun | Alausa | Berger"
                    android:textColor="#EEEEEE"
                    android:layout_margin="2dp"
                    android:id="@+id/newQuadrant2"
                    android:background="@color/workchopBlue"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="141dp"
                    android:layout_height="match_parent"
                    android:textSize="13sp"
                    android:gravity="center"
                    android:clickable="true"
                    android:alpha="0.7"
                    android:padding="2dp"
                    android:text="Shomolu | Bariga | Anthony | Maryland | Onipanu | Ilupeju"
                    android:textColor="#EEEEEE"
                    android:layout_margin="2dp"
                    android:id="@+id/newQuadrant3"
                    android:background="@color/workchopBlue"/>
                <TextView
                    android:layout_width="151dp"
                    android:layout_height="match_parent"
                    android:textSize="13sp"
                    android:gravity="center"
                    android:text="Ebute Meta | Yaba | Akoka | Lagos Island | Oke Arin | Sure | Obalende"
                    android:padding="2dp"
                    android:clickable="true"
                    android:textColor="#EEEEEE"
                    android:alpha="0.7"
                    android:id="@+id/newQuadrant4"
                    android:layout_margin="2dp"
                    android:background="#656565"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="96dp"
                    android:layout_height="match_parent"
                    android:textSize="13sp"
                    android:gravity="center"
                    android:alpha="0.7"
                    android:clickable="true"
                    android:padding="2dp"
                    android:text="Ikorodu | Ojota | Mile 12 | Ketu"
                    android:textColor="#EEEEEE"
                    android:layout_margin="2dp"
                    android:id="@+id/newQuadrant5"
                    android:background="@color/workchopBlue"/>
                <TextView
                    android:layout_width="96dp"
                    android:layout_height="match_parent"
                    android:textSize="13sp"
                    android:gravity="center"
                    android:clickable="true"
                    android:alpha="0.7"
                    android:padding="2dp"
                    android:text="Ajah | Lekki | Victoria Island | Ikoyi | Epe"
                    android:textColor="#EEEEEE"
                    android:layout_margin="2dp"
                    android:id="@+id/newQuadrant6"
                    android:background="@color/workchopBlue"/>
                <TextView
                    android:layout_width="96dp"
                    android:layout_height="match_parent"
                    android:textSize="13sp"
                    android:gravity="center"
                    android:clickable="true"
                    android:alpha="0.7"
                    android:padding="2dp"
                    android:text="Oshodi | Alimosho | Abule Egba | Ikotun | Egbeda"
                    android:textColor="#EEEEEE"
                    android:layout_margin="2dp"
                    android:id="@+id/newQuadrant7"
                    android:background="@color/workchopBlue"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Send"
                android:textColor="#FFFFFF"
                android:textSize="13sp"
                android:id="@+id/selectLocationButton"
                android:background="@drawable/background_button_gold"
                android:padding="0dp"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textSize="15sp"
            android:clickable="true"
            android:id="@+id/cantFind"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/workchopBlue"
            android:text="Can't find your location?"/>
    </LinearLayout>

</LinearLayout>